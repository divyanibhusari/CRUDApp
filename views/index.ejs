<%- include("./partials/Header.ejs")%>

    <section>
        <div class="container-fluid">
            <div class="container p-5 ">
                <h3 class="d-flex text-center justify-content-center ">Student Inqury form </h3>
                <form action="/" method="post" class="p-4 bg-dark gap-4 shadow d-flex flex-column">
                    <div class="row ">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Name" name="name" required>
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Phone" name="phone" required>
                        </div>
                        <div class="col">
                            <input type="email" class="form-control" placeholder="Email" name="email" required>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col d-flex align-items-center gap-2">
                            <label for="" class="text-light">D.O.B</label>
                            <input type="date" value="2000-01-01" class="form-control" name="dob" required>
                        </div>
                        <div class="col-9">
                            <input type="text" class="form-control" placeholder="Address" name="address" required>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col">
                            <select class="form-select" name="education" required>
                                <option value="">Education</option>
                                <option value="10th">10<sup>th</sup></option>
                                <option value="10+2">10+2</option>
                                <option value="diploma">Diploma</option>
                                <option value="under gradution">Under Gradution</option>
                                <option value="Graduate">Graduate</option>
                                <option value="post gradution">Post Gradution</option>
                            </select>

                        </div>
                        <div class="col">
                            <select class="form-select" name="stream" required>
                                <option value="">Stream</option>
                                <option value="Btech">Btech</option>
                                <option value="BCA">BCA</option>
                                <option value="BCCA">BCCA</option>
                                <option value="MTech">MTech</option>
                                <option value="MCA">MCA</option>
                                <option value="MBA">MBA</option>
                            </select>
                        </div>
                        <div class="col">
                            <select class="form-select" name="course_instrested">
                                <option value="">Course Instrested</option>
                                <option value="MERN Stack Development">MERN Stack Development</option>
                                <option value="Java Full Stack">Java Full Stack</option>
                                <option value="Digital Marketing">Digital Marketing</option>
                                <option value="UI/UX">UI/UX</option>
                            </select>
                        </div>
                        <div class="col">
                            <input class="form-control" type="number" min="0" max="300"
                                placeholder="Entrance Marks(0-300)" name="entrance_marks" required>
                        </div>

                    </div>
                    <div class=" d-flex justify-content-center gap-2 p-3">
                        <button class="btn btn-success" type="submit">Submit <span
                                class="fa-solid fa-paper-plane"></span></button>
                        <button class="btn btn-danger" type="reset">Reset <span
                                class="fa-solid fa-rotate-right"></span></button>
                    </div>
                </form>
            </div>
        </div>
        <div class="container-fluid">
           
                <!-- table to display data of students -->
                <% if(data) { %>

                    <table class="table table-bordered">
                        <thead class="table-dark">
                            <tr class=" ">
                                <th>name</th>
                                <th>phone</th>
                                <th>email</th>
                                <th>dob</th>
                                <th>address</th>   
                                <th>education</th>
                                <th>stream</th>
                                <th>course_instrested</th>
                                <th>entrance_marks</th>
                                <th>timeStamp</th>
                                <th>intrested</th>
                                <th>admission</th>
                                <th>admissionDate</th>
                                <th>entrance_percentages</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach((student)=>{ %>
                                <tr>
                                    <td>
                                        <%= student.name %>
                                    </td>
                                    <td>
                                        <%= student.phone %>
                                    </td>
                                    <td>
                                        <%= student.email %>
                                    </td>
                                    <td>
                                        <%= student.dob %>
                                    </td>
                                    <td>
                                        <%= student.address %>
                                    </td>
                                
                                    <td>
                                        <%= student.education %>
                                    </td>
                                    <td>
                                        <%= student.stream %>
                                    </td>
                                    <td>
                                        <%= student.course_instrested %>
                                    </td>
                                    <td>
                                        <%= student.entrance_marks %>
                                    </td>
                                    <td>
                                        <%= student.timeStamp %>
                                    </td>
                                    <td>
                                        <%= student.intrested %>
                                    </td>
                                    <td>
                                        <%= student.admission %>
                                    </td>
                                    <td>
                                        <%= student.admissionDate %>
                                    </td>
                                    <td>
                                        <%= student.entrance_percentages %>
                                    </td>
                                    <td class="d-flex gap-2">
                                        <button class="btn btn-primary">Edit</button>
                                        <button class="btn btn-danger">Delete</button>
                                    </td>
                                </tr>

                                <% }) %>
                        </tbody>
                    </table>

                    <% } else { %>

                        <p class="text-center fw-bolder">No Date found</p>

                        <% } %>
            
        </div>
    </section>
    <%- include("./partials/Footers.ejs")%>